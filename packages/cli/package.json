{
    "name": "notion-db-notification-cli",
    "version": "0.0.4",
    "description": "notion-db-notification cli package",
    "keywords": [
        "notion"
    ],
    "homepage": "https://github.com/MeilCli/notion-db-notification",
    "main": "lib/index.js",
    "types": "lib/index.d.ts",
    "files": [
        "lib"
    ],
    "bin": {
        "notion-db-notification": "lib/index.js"
    },
    "scripts": {
        "cli": "ts-node src/index.ts",
        "test": "jest"
    },
    "author": "MeilCli",
    "license": "MIT",
    "dependencies": {
        "notion-db-notification-core": "^0.0.4",
        "notion-db-notification-store-file": "^0.0.4",
        "notion-db-notification-sender-slack": "^0.0.4"
    },
    "jest": {
        "clearMocks": true,
        "moduleFileExtensions": [
            "js",
            "ts"
        ],
        "testEnvironment": "node",
        "testMatch": [
            "**/*.test.ts"
        ],
        "testRunner": "jest-circus/runner",
        "transform": {
            "^.+\\.ts$": "ts-jest"
        },
        "verbose": true
    }
}
